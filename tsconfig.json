{
  "compilerOptions": {
    "target": "es2016",
    "module": "CommonJS",
    "allowSyntheticDefaultImports": true,
    "rootDir": "src",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "esModuleInterop": true,    
    "paths": {
      "*":["node_modules/*", "src/types/*"]
    },
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true 
  },
  "include": ["./src/**/*"]
}
